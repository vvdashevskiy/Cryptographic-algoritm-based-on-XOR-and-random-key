<Page x:Class="Cryptographic_algoritm_based_on_XOR_and_random_key.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cryptographic_algoritm_based_on_XOR_and_random_key"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="LoginPage">

    <Grid>
        <TextBox x:Name="LoginBox" Margin="150,80,150,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Войти в систему" Margin="150,180,150,0" Height="75" VerticalAlignment="Top" Click="LoginButton_Click"/>
        <PasswordBox x:Name="PasswordBox" Margin="150,140,150,0" VerticalAlignment="Top"/>
        <Label x:Name="LoginLabel" Content="Введите ваш логин:" Margin="150,49,150,0" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLabel" Content="Введите ваш пароль:" Margin="150,109,150,0" VerticalAlignment="Top"/>
        <Button x:Name="RegisterButton" Content="Создать нового пользователя" Margin="150,270,150,0" VerticalAlignment="Top" Height="50" Click="RegisterButton_Click"/>
    </Grid>
</Page>
